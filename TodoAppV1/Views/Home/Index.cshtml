@model List<TodoAppV1.Models.TodoListDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link href="~/Content/css/todoListBox.css" rel="stylesheet" />
